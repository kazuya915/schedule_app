<div>
  <ul>
    <li><%= link_to "予定一覧に戻る", :posts %></li>
  </ul>
</div>

<h3><%= @post.title %></h3>
 
<div class="table-responsive TableResponsive">
    <table >
    <tr>
        <th>開始日</th>
        <td><%= @post.start_at %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @post.end_at %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td>
            <% if @post.allday == '1' %>
            ○
            <% else @post.allday == '0' %>
            <% end %>
        </td>
    </tr>
    <tr>
        <th>メモ</th>
        <td><%= @post.memo %></td>
    </tr>
    </table>
</div>

<p><%= link_to "編集", edit_post_path %></p>






