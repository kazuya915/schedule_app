<h2>予定を編集してください</h2>
<% if flash[:failure] %>
<p class="failure"><%= flash[:failure] %></p>
<% end %>
<%= render "shared/error", obj: @post %>


<%= form_with model: @post do |f| %>
  
    <table>
      <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th><%= f.label :start_at ,"開始日" %></th>
        <td><%= f.date_select :start_at %></td>
      </tr>
      <tr>
        <th><%= f.label :end_at ,"終了日" %></th>
        <td><%= f.date_select :end_at %></td>
      </tr>
      <tr>
        <th><%= f.label :end_at ,"終日" %></th>
        <td><%= f.check_box :allday, :as => :boolean %>終日の場合はチェックを入れます</td>
      </tr>
      <tr>
        <th><%= f.label :memo ,"メモ" %></th>
        <td><%= f.text_area :memo %></td>
      </tr>
    </table>
  
    <div>
        <p><%= f.submit "編集を完了する" %></p>
        <p><%= link_to "ユーザー情報一覧に戻る", :posts %></p>
    </div>
<% end %>