<h2>予定を編集してください</h2>
<% if flash[:failure] %>
<p class="failure"><%= flash[:failure] %></p>
<% end %>



<%= form_with model: @post do |f| %>
    <table>
      <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>
      <tr>
        <th><%= f.label :start_at ,"開始日" %></th>
        <td><%= f.text_field :start_at %></td>
      </tr>
      <tr>
        <th><%= f.label :end_at ,"終了日" %></th>
        <td><%= f.text_field :end_at %></td>
      </tr>
      <tr>
        <th><%= f.label :memo ,"メモ" %></th>
        <td><%= f.text_area :memo %></td>
      </tr>
    </table>
  
    <div>
      <ul>
        <li><%= f.submit "編集を完了する" %></li>
        <li><%= link_to "ユーザー情報一覧に戻る", :posts %></li>
      </ul>
    </div>
<% end %>