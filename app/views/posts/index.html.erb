<h2>予定一覧</h2>
<%= link_to "新規追加", "/posts/new" %>

<div class="table-responsive TableResponsive">
  <table class="table Table">
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>更新日時</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.start_at %></td>
          <td><%= post.end_at %></td>
          <td><%= post.allday %></td>
          <td><%= post.updated_at %></td>
        #   <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>